generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String          @default("User")
  password      String
  salt          String
  lastAction    DateTime        @default(now())
  created       DateTime        @default(now())
  refreshToken  String?
  group         Groups          @default(User)
  accountBook   AccountBook[]
  addressBook   AddressBook[]
  computer      Computer[]
  dns           DNS[]
  logs          Logs[]
  memory        Memory[]
  notifications Notifications[]
  process       Process[]
  profile       Profile[]
  session       Session[]
  software      Software[]
  userQuests    UserQuests[]

  Portfolio Portfolio[]

  FundInvestor FundInvestor[]

  Fund Fund[]

  Trade Trade[]
}

model Game {
  id          String        @id @default(uuid())
  name        String
  started     DateTime      @default(now())
  ended       DateTime?
  accountBook AccountBook[]
  addressBook AddressBook[]
  computer    Computer[]
  dns         DNS[]
  hardware    Hardware[]
  logs        Logs[]
  memory      Memory[]
  process     Process[]
  profile     Profile[]
  quests      Quests[]
  software    Software[]
  userQuests  UserQuests[]
}

model Session {
  id         String   @id
  userId     Int
  token      String
  lastAction DateTime
  created    DateTime @default(now())
  expires    DateTime
  user       User     @relation(fields: [userId], references: [id])
}

model Hardware {
  id         Int           @id @default(autoincrement())
  computerId String
  gameId     String
  type       HardwareTypes
  strength   Float
  computer   Computer      @relation(fields: [computerId], references: [id])
  game       Game          @relation(fields: [gameId], references: [id])
}

model AddressBook {
  id         Int         @id @default(autoincrement())
  userId     Int
  access     AccessLevel
  computerId String
  ip         String
  data       Json        @default("{}")
  gameId     String
  computer   Computer    @relation(fields: [computerId], references: [id])
  game       Game        @relation(fields: [gameId], references: [id])
  user       User        @relation(fields: [userId], references: [id])
}

model DNS {
  id          Int      @id @default(autoincrement())
  userId      Int
  computerId  String
  gameId      String
  website     String
  tags        String
  description String   @default("No description available")
  updated     DateTime @default(now())
  created     DateTime @default(now())
  computer    Computer @relation(fields: [computerId], references: [id])
  game        Game     @relation(fields: [gameId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
}

model AccountBook {
  id         Int      @id @default(autoincrement())
  userId     Int
  computerId String
  memoryId   String
  data       Json     @default("{}")
  gameId     String
  computer   Computer @relation(fields: [computerId], references: [id])
  game       Game     @relation(fields: [gameId], references: [id])
  memory     Memory   @relation(fields: [memoryId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Profile {
  id     Int    @id @default(autoincrement())
  userId Int
  gameId String
  data   Json   @default("{}")
  game   Game   @relation(fields: [gameId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model Memory {
  id          String        @id @default(uuid())
  computerId  String
  gameId      String
  userId      Int
  type        String
  key         String
  value       Float?
  data        Json          @default("{}")
  accountBook AccountBook[]
  computer    Computer      @relation(fields: [computerId], references: [id])
  game        Game          @relation(fields: [gameId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
}

model Computer {
  id          String        @id @default(uuid())
  userId      Int
  type        String        @default("npc")
  gameId      String
  ip          String
  data        Json          @default("{}")
  created     DateTime      @default(now())
  updated     DateTime      @default(now()) @updatedAt
  accountBook AccountBook[]
  addressBook AddressBook[]
  game        Game          @relation(fields: [gameId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
  dns         DNS[]
  hardware    Hardware[]
  logs        Logs[]
  memory      Memory[]
  process     Process[]
  software    Software[]
}

model Quests {
  id         String       @id @default(uuid())
  gameId     String
  type       String
  title      String
  reward     Json?
  open       Boolean
  game       Game         @relation(fields: [gameId], references: [id])
  userQuests UserQuests[]
}

model UserQuests {
  id        String   @id @default(uuid())
  questsId  String
  userId    Int
  gameId    String
  completed Boolean
  created   DateTime @default(now())
  updated   DateTime @default(now()) @updatedAt
  game      Game     @relation(fields: [gameId], references: [id])
  quest     Quests   @relation(fields: [questsId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Software {
  id         String   @id @default(uuid())
  userId     Int
  computerId String
  gameId     String
  type       String
  level      Float
  size       Float
  opacity    Float
  installed  Boolean
  executed   DateTime @default(now())
  created    DateTime @default(now())
  updated    DateTime @default(now()) @updatedAt
  data       Json     @default("{}")
  computer   Computer @relation(fields: [computerId], references: [id])
  game       Game     @relation(fields: [gameId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Process {
  id         String   @id @default(uuid())
  userId     Int
  computerId String
  ip         String?
  gameId     String
  type       String
  started    DateTime @default(now())
  completion DateTime
  data       Json
  computer   Computer @relation(fields: [computerId], references: [id])
  game       Game     @relation(fields: [gameId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Notifications {
  id      Int     @id @default(autoincrement())
  userId  Int
  type    String
  content Json
  read    Boolean @default(false)
  user    User    @relation(fields: [userId], references: [id])
}

model Logs {
  id         Int      @id @default(autoincrement())
  userId     Int
  computerId String
  senderId   String
  senderIp   String
  gameId     String
  message    String
  created    DateTime @default(now())
  computer   Computer @relation(fields: [computerId], references: [id])
  game       Game     @relation(fields: [gameId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

enum Groups {
  User
  Guest
  Admin
}

enum HardwareTypes {
  CPU
  GPU
  RAM
  HDD
  Upload
  Download
}

enum AccessLevel {
  GOD
  FTP
}

//
// Market related structs now
// ----------------------------------------
//

enum InstructionNamedType {
  BUY
  SELL
  REBALANCE
  WITHDRAW
  DEPOSIT
}

model Trade {
  id                  Int                  @id @default(autoincrement())
  userId              Int
  marketId            Int
  portfolioId         Int
  type                String
  quantity            Int
  price               BigInt
  totalValue          Int
  status              String
  executedAt          DateTime
  createdAt           DateTime             @default(now())
  buyIntoTargetFund   Fund                 @relation(fields: [buyIntoTargetFundid], references: [id])
  buyIntoTargetFundid Int
  instructionType     InstructionNamedType

  user      User      @relation(fields: [userId], references: [id])
  market    Market    @relation(fields: [marketId], references: [id])
  portfolio Portfolio @relation(fields: [portfolioId], references: [id])
}

model Fund {
  id                      Int      @id @default(autoincrement())
  fundManagerId           Int
  name                    String   @db.VarChar(255)
  minimumInvestmentAmount BigInt   @default(0)
  totalFundCharge         Decimal  @default(0) @db.Decimal(5, 4)
  totalFundCost           Decimal  @default(0) @db.Decimal(5, 4)
  totalAssets             BigInt   @default(0)
  isActive                Boolean  @default(true)
  maxInvestors            Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  fundManager        User                @relation(fields: [fundManagerId], references: [id])
  investors          FundInvestor[]
  performanceHistory PerformanceRecord[]
  trades             Trade[]

  HedgeFund HedgeFund[]
}

model PerformanceRecord {
  id        Int      @id @default(autoincrement())
  fundId    Int
  date      DateTime
  value     BigInt
  return    Decimal  @default(0) @db.Decimal(8, 4)
  createdAt DateTime @default(now())

  fund Fund @relation(fields: [fundId], references: [id])
}

model FundInvestor {
  fundId         Int
  userId         Int
  investmentDate DateTime @default(now())
  investedAmount BigInt   @default(0)

  fund Fund @relation(fields: [fundId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@id([fundId, userId])
}

enum Volatility {
  STABLE
  FLUCTUATING
  DANGEROUS
}

model Market {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  symbol      String   @unique @db.VarChar(10)
  price       BigInt
  marketCap   BigInt   @default(0)
  bidAsk      Decimal  @default(0) @db.Decimal(8, 4)
  buyers      BigInt   @default(0)
  sellers     BigInt   @default(0)
  isActive    Boolean  @default(true)
  isClosed    Boolean  @default(false)
  openTime    DateTime
  closeTime   DateTime
  lastUpdated DateTime @updatedAt
  createdAt   DateTime @default(now())

  trades Trade[]

  PortfolioHolding PortfolioHolding[]
}

model Portfolio {
  id         Int      @id @default(autoincrement())
  userId     Int
  name       String   @db.VarChar(255)
  totalValue BigInt   @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User               @relation(fields: [userId], references: [id])
  holdings PortfolioHolding[]
  trades   Trade[]
}

model PortfolioHolding {
  id           Int      @id @default(autoincrement())
  portfolioId  Int
  marketId     Int
  quantity     BigInt
  averagePrice BigInt
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  portfolio Portfolio @relation(fields: [portfolioId], references: [id])
  market    Market    @relation(fields: [marketId], references: [id])
}

model HedgeFund {
  id                Int      @id @default(autoincrement())
  fundId            Int      @unique
  strategy          String   @db.VarChar(100)
  riskLevel         String   @db.VarChar(20)
  minimumLockPeriod Int      @default(0)
  managementFee     Decimal  @default(0) @db.Decimal(5, 4)
  performanceFee    Decimal  @default(0) @db.Decimal(5, 4)
  highWaterMark     BigInt   @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  fund Fund @relation(fields: [fundId], references: [id])
}
