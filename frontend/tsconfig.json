{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "paths": {
      "~/*": [
        "./*"
      ],
      "~/componenets/*": [
        "components/*",
        "components/brower/*",
        "components/modals/*",
        "components/navbar/*",
      ],
      "~/pages/*": [
        "pages/*",
        "pages/auth/*",
        "pages/computers/*",
        "pages/dev/*",
        "pages/internet/*",
        "pages/market/*",
      ],
      "~/lib/*": [
        "lib/*",
        "lib/menus/*",
        "lib/stores/*"
      ],
      "~/contexts/*": [
        "contexts/*"
      ],
      "~/providers/*": [
        "providers/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}